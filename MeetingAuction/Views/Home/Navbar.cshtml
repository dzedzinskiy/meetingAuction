@model MeetingAuction.Data.Interfaces.IUser
@{
    Layout = null;
}
<!-- Header -->
<div id="header" class="skel-panels-fixed">
    <div class="top">
        <!-- Logo -->
        <div style="float:left;display: block; width: 100%;">
            <div style="float: left;">
                <img src="@Model.Profile.AvatarPath" width="120" height="120" style="margin:15px;" alt="" />
            </div>
            <!-- Nav -->
            <nav id="nav1" style="float:right">
                <ul>
                    <li>@Html.ActionLink("Профіль", "MyPage", "Home", new { login = Model.Login }, null)</li>
                    <li>@Html.ActionLink("Новини", "Index", "Home")</li>
                    <li>@Html.ActionLink("Пошук", "About", "Home")</li>
                    <li>@Html.ActionLink("Люди", "Users", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </nav>
        </div>
                
        <div style="float:left;display: block; width: 100%;">
            <span class="text" style="float: left;display: block;width: 100%;">
                @Html.ActionLink(Model.FullName, "MyPage", "Home", new { login = Model.Login })
            </span>
            <span class="text" style="float: left;display: block;width: 100%; line-height: 5px;">
                @Model.Profile.WorkingPosition
            </span>
        </div>
        
        <div style="float:left;display: block; width: 100%; padding-top: 25px;">
            @if (ViewBag.IsProfilePage)
            {
                <!-- Nav -->
                <nav id="nav">
                    <ul>
                        <li><a href="#top" id="top-link" class="skel-panels-ignoreHref"><span class="fa fa-home">Вступ</span></a></li>
                        <li><a href="#portfolio" id="portfolio-link" class="skel-panels-ignoreHref"><span class="fa fa-th">Портфоліо</span></a></li>
                        <li><a href="#about" id="about-link" class="skel-panels-ignoreHref"><span class="fa fa-user">Про мене</span></a></li>
                        <li><a href="#contact" id="contact-link" class="skel-panels-ignoreHref"><span class="fa fa-envelope">Зв'язок</span></a></li>
                    </ul>
                </nav>
            }
        </div>
    </div>
